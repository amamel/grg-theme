{% for chunk in post.get_field('chunks') %}

  {% if chunk.acf_fc_layout == 'text' %}
    {% include 'chunks/text.twig' with { contain : 'contain-sm' } %}
  {% elseif chunk.acf_fc_layout == 'list' %}
    {% include 'chunks/list.twig' with { contain : 'contain-sm' } %}
  {% elseif chunk.acf_fc_layout == 'connected_items' %}
    {% include 'chunks/connected-items.twig' with { contain : 'contain-sm' } %}
  {% elseif chunk.acf_fc_layout == 'image' %}
    {% include 'chunks/image.twig' with { contain : chunk.size } %}
  {% elseif chunk.acf_fc_layout == 'html' %}
    {% include 'chunks/html.twig' with { contain : chunk.size } %}
  {% elseif chunk.acf_fc_layout == 'section_heading' %}
      {% include 'chunks/section-heading.twig' %}
  {% elseif chunk.acf_fc_layout == 'faqs' %}
      {% include 'chunks/faqs.twig' %}
  {% elseif chunk.acf_fc_layout == 'cta' %}
    {% include 'chunks/call-to-action.twig' %}
  {% elseif chunk.acf_fc_layout == 'cards' %}
    {% include 'chunks/icon-row.twig' %}
  {% endif %}

{% endfor %}
